        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UdpClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
        <Image Name="ClientImage" Height="200" VerticalAlignment="Top"></Image>
        <Button Height="50" Width="100" Margin="0 100 0 0" Content="SEND REQUEST" Click="Button_Click"/>
            <TextBox Name="txtbx"></TextBox>
        </StackPanel>
    </Grid>
</Window>
